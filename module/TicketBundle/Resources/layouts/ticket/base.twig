{{ doctype() }}

<html lang="en">
    <head>

        {{ headMeta() }}
        {{ headTitle('Ticket Sale', 'PREPEND') }}

        {{ headLink() }}
    </head>

    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="{{ organizationUrl }}" class="brand"><img src="/_ticket/img/logo.png" /></a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        {% if hasAccess('ticket_sale_index', 'sale') %}
                            <li {% if 'sale' == getParam('action') and 'ticket_sale_index' == getParam('controller') %} class="active" {% endif %}>
                                <a href="{{ url("ticket_sale_index", {"action": "sale", "id": event.getId()}) }}">Event</a>
                            </li>
                        {% endif %}
                        {% if hasAccess('ticket_sale_ticket', 'overview') %}
                            <li {% if 'overview' == getParam('action') and 'ticket_sale_ticket' == getParam('controller') %} class="active" {% endif %}>
                                <a href="{{ url("ticket_sale_ticket", {"action": "overview", "id": event.getId()}) }}">Tickets</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <header>
            <div class="container">
                <h1>{{ translate('Ticket Sale') }}</h1>
            </div>
        </header>

        <div class="container">
            {% include 'ticket/partials/flashMessenger.twig' %}

            {% if not event.isActive() %}
                <div class="alert alert-warning fade in">
                    <a class="close" data-dismiss="alert">&times;</a>
                    {{ translate('The event isn\'t active anymore.') }}
                </div>
            {% endif %}

            <div id="content_controller">
                <div class="page-header">
                    <h1>{{ event.getActivity().getTitle(language) }}</h1>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <dl class="dl-horizontal">
                            <dt>Bookable for</dt><dd></dd>
                            {% for category in event.getBookingCategories() %}
                                <dt>{{translate(category.getCategory())}}</dt>
                                <dd>{% if category.isBookable() %}yes{% else %}no{% endif %}</dd>
                                <dt>Bookings Close Date</dt>
                                <dd>{% if category.getBookingCloseDate() %}{{ category.getBookingCloseDate().format('d/m/Y H:i') }}{% else %}<i>No End Date</i>{% endif %}</dd>
                            {% endfor %}
                            {% if event.getMaxNumberTickets() > 0 %}
                                <dt>Number Free</dt>
                                <dd>{{ event.getMaxNumberTickets() - eventInfo['event']['number_booked'] }}</dd>
                            {% endif %}
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="dl-horizontal">
                            <dt>Amounts</dt><dd>Sold/Booked</dd>
                            {% for category in event.getBookingCategories() %}
                                <dt>{{ translate(category.getCategory()) }}</dt><dd></dd>
                                {% for option in category.getOptions() %}
                                    <dt>{{ option.getName() }}</dt>
                                    <dd>{{ eventInfo['categories'][category.getCategory()][option.getName()]['number_sold'] }} / {{ eventInfo['categories'][category.getCategory()][option.getName()]['number_booked'] }}</dd>
                                {% endfor %}
                            {% endfor %}
                            <dt>Total</dt>
                            <dd>{{ eventInfo['event']['number_sold'] }} / {{ eventInfo['event']['number_booked'] }}</dd>
                        </dl>
                    </div>
                </div>

                {% block content %} {% endblock %}
            </div>
        </div>

        <footer>
            Litus Ticket | Code by <a href="http://litus.cc">Litus</a>
        </footer>

        {{ inlineScript() }}

        {% block content_script %}{% endblock %}
    </body>
</html>
